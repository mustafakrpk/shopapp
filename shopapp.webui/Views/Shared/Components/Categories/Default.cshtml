@model List<Category>

<!-- Shop Sidebar Wrapper -->
<div class="shop-sidebar-wrap" style="padding:20px 20px; "> <!-- Sol tarafa boşluk bırakmak için padding ekledik -->
    <!-- Category Section -->
    <div class="shop-sidebar mb--30">
        <h4 class="title">CATEGORIES</h4>
        <ul class="category-list">
            <!-- Tüm Kategoriler -->
            <li class="category-item">
                <a href="/products"
                    class="category-link @(string.IsNullOrEmpty(ViewBag.SelectedCategory) ? "active" : "")">
                    Tüm Kategoriler
                </a>
            </li>
            <!-- Dinamik Kategoriler -->
            @foreach (var item in Model)
            {
                <li class="category-item">
                    <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Url"
                        class="category-link @(ViewBag.SelectedCategory == item.Url ? "active" : "")">
                        @item.Name
                    </a>
                </li>
            }
        </ul>
    </div>

    <!-- End of Category Section -->

    <!-- Filter By Price Section -->
    <div class="shop-sidebar mb--30">
        <h4 class="title">FILTER BY PRICE</h4>
        <div class="filter-price-content">
            <form action="#" method="post">
                <div id="price-slider" class="price-slider"></div>
                <div class="filter-price-wapper">
                    <div class="filter-price-cont">
                        <span>Price:</span>
                        <div class="input-type">
                            <input type="text" id="min-price" readonly="" />
                        </div>
                        <span>—</span>
                        <div class="input-type">
                            <input type="text" id="max-price" readonly="" />
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- End of Filter By Price Section -->

    <!-- Best Products Section -->
    <div class="sidbar-product shop-sidebar mb--30">
        <h4 class="title">BEST PRODUCTS</h4>
        <!-- Product 1 -->
        <div class="sidbar-product-inner">
            <div class="product-image">
                <a href="#">
                    <img src="assets/images/product/10.jpg" alt="Product 1" />
                </a>
            </div>
            <div class="product-content text-start">
                <h3><a href="#">Product Name 1</a></h3>
                <div class="price-box">
                    <span class="new-price">$100.00</span>
                    <span class="old-price">$120.00</span>
                </div>
            </div>
        </div>
        <!-- Product 2 -->
        <div class="sidbar-product-inner">
            <div class="product-image">
                <a href="#">
                    <img src="assets/images/product/11.jpg" alt="Product 2" />
                </a>
            </div>
            <div class="product-content text-start">
                <h3><a href="#">Product Name 2</a></h3>
                <div class="price-box">
                    <span class="new-price">$150.00</span>
                    <span class="old-price">$170.00</span>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Best Products Section -->

    <!-- Hot Tags Section -->
    <div class="shop-sidebar">
        <h4 class="title">HOT TAGS</h4>
        <div class="sidebar-tag">
            <a href="#">Women</a>
            <a href="#">Bags</a>
            <a href="#">Men</a>
            <a href="#">Hot</a>
            <a href="#">Fashion</a>
            <a href="#">Digital</a>
        </div>
    </div>
    <!-- End of Hot Tags Section -->
</div>
<!-- End of Shop Sidebar Wrapper -->
