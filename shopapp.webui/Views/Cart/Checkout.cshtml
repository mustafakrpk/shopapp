@model OrderModel

<!-- breadcrumb-area start -->
<div class="breadcrumb-area section-ptb">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="breadcrumb-title">Checkout</h2>
                <!-- breadcrumb-list start -->
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Checkout</li>
                </ul>
                <!-- breadcrumb-list end -->
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->

<!-- main-content-wrap start -->
<div class="main-content-wrap section-ptb checkout-page">
    <div class="container">
        <!-- checkout-details-wrapper start -->
        <div class="checkout-details-wrapper">
            <div class="row">
                <!-- Billing Details -->
                <div class="col-lg-6 col-md-6">
                    <div class="billing-details-wrap">
                        <form method="post" asp-controller="Cart" asp-action="Checkout">
                            <h3 class="shoping-checkboxt-title">Billing Details</h3>
                            <div class="row">
                                <div class="col-lg-6">
                                    <p class="single-form-row">
                                        <label asp-for="FirstName">First Name <span class="required">*</span></label>
                                        <input asp-for="FirstName" class="form-control" />
                                    </p>
                                </div>
                                <div class="col-lg-6">
                                    <p class="single-form-row">
                                        <label asp-for="LastName">Last Name <span class="required">*</span></label>
                                        <input asp-for="LastName" class="form-control" />
                                    </p>
                                </div>
                                <div class="col-lg-12">
                                    <p class="single-form-row">
                                        <label asp-for="Address">Street Address <span class="required">*</span></label>
                                        <input asp-for="Address" placeholder="House number and street name"
                                            class="form-control" />
                                    </p>
                                </div>
                                <div class="col-lg-12">
                                    <p class="single-form-row">
                                        <label asp-for="City">City <span class="required">*</span></label>
                                        <input asp-for="City" class="form-control" />
                                    </p>
                                </div>
                                <div class="col-lg-6">
                                    <p class="single-form-row">
                                        <label asp-for="Phone">Phone <span class="required">*</span></label>
                                        <input asp-for="Phone" class="form-control" />
                                    </p>
                                </div>
                                <div class="col-lg-6">
                                    <p class="single-form-row">
                                        <label asp-for="Email">Email Address <span class="required">*</span></label>
                                        <input asp-for="Email" class="form-control" />
                                    </p>
                                </div>
                                <div class="col-lg-12">
                                    <p class="single-form-row m-0">
                                        <label>Order Notes</label>
                                        <textarea placeholder="Notes about your order, e.g. special notes for delivery."
                                            class="form-control" rows="3"></textarea>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="col-lg-6 col-md-6">
                    <div class="your-order-wrapper">
                        <h3 class="shoping-checkboxt-title">Your Order</h3>
                        <div class="your-order-wrap">
                            <div class="your-order-table table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="product-name">Product</th>
                                            <th class="product-total">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.CartModel.CartItems)
                                        {
                                            <tr class="cart_item">
                                                <td class="product-name">
                                                    @item.Name <strong class="product-quantity"> Ã— @item.Quantity</strong>
                                                </td>
                                                <td class="product-total">
                                                    <span class="amount">@((item.Price *
                                                    item.Quantity).ToString("c"))</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="cart-subtotal">
                                            <th>Cart Subtotal</th>
                                            <td><span class="amount">@Model.CartModel.TotalPrice().ToString("c")</span>
                                            </td>
                                        </tr>
                                        <tr class="order-total">
                                            <th>Order Total</th>
                                            <td><strong><span
                                                        class="amount">@Model.CartModel.TotalPrice().ToString("c")</span></strong>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="payment-method">
                                <div class="payment-accordion">
                                    <h3>Payment Method</h3>
                                    <div class="payment-content">
                                        <p>Pay securely using your credit card.</p>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <p class="single-form-row">
                                                    <label asp-for="CardName">Card Name <span
                                                            class="required">*</span></label>
                                                    <input asp-for="CardName" class="form-control" />
                                                </p>
                                            </div>
                                            <div class="col-lg-6">
                                                <p class="single-form-row">
                                                    <label asp-for="CardNumber">Card Number <span
                                                            class="required">*</span></label>
                                                    <input asp-for="CardNumber" class="form-control" />
                                                </p>
                                            </div>
                                            <div class="col-lg-4">
                                                <p class="single-form-row">
                                                    <label asp-for="ExpirationMonth">Expiration Month <span
                                                            class="required">*</span></label>
                                                    <input asp-for="ExpirationMonth" class="form-control" />
                                                </p>
                                            </div>
                                            <div class="col-lg-4">
                                                <p class="single-form-row">
                                                    <label asp-for="ExpirationYear">Expiration Year <span
                                                            class="required">*</span></label>
                                                    <input asp-for="ExpirationYear" class="form-control" />
                                                </p>
                                            </div>
                                            <div class="col-lg-4">
                                                <p class="single-form-row">
                                                    <label asp-for="Cvc">CVC <span class="required">*</span></label>
                                                    <input asp-for="Cvc" class="form-control" />
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="order-button-payment mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Place Order</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- checkout-details-wrapper end -->
    </div>
</div>
<!-- main-content-wrap end -->